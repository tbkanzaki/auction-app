<div class="container shadow p-2 mb-4 bg-body-tertiary rounded div-max-width" >
  <div class="card mx-auto mb-3" style="max-width: 540px;">
    <div class="card-body">
      <h3 class="card-title text-center">Lote <%= @lot.code %></h3>
      <dl class="row text-muted">
        <dt class="col-sm-6">Data inicial</dt>
        <dd class="col-sm-6"><%= I18n.localize(@lot.start_date) %></dd>
        <dt class="col-sm-6">Data limite</dt>
        <dd class="col-sm-6"><%= I18n.localize(@lot.limit_date) %></dd>
        <dt class="col-sm-6">Lance mínimo</dt>
        <dd class="col-sm-6"><%= @lot.minimum_bid  %></dd>
        <dt class="col-sm-6">Diferença mínima entre lances</dt>
        <dd class="col-sm-6"><%= @lot.minimum_difference_bids  %></dd>
        <dt class="col-sm-6">Cadastrado por</dt>
        <dd class="col-sm-6"><%= @lot.user.name  %></dd>
        <dt class="col-sm-6">Status</dt>
        <dd class="col-sm-6"><%= I18n.t(@lot.status)  %></dd>
        <hr>
        <% if @lot.waiting_approval? %>
          <div>
            <%= link_to 'Adicionar item', new_lot_lot_item_path(@lot.id), class: 'btn btn-secondary btn-sm' %>
          </div>
        <% end %>
      </dl>
    </div>
  </div>

  <div class="container div-max-width p-2" >
    <div class="row">
      <div class="col">
        <% if @lot.lot_items.any? %>
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Itens do Lote</th>
                <th></th>
              </tr>
            </thead>
            <tbody class="table-group-divider">
              <% @lot.lot_items.each do |item| %>
                <tr>
                  <td><%= item.product.code %> - <%= item.product.name %></td>
                  <% if @lot.waiting_approval? %>
                    <td><%= button_to 'Remover item', lot_lot_item_path(@lot.id,item), class: 'btn btn-outline-secondary btn-sm' , id: dom_id(item), method: :delete %></td>
                  <% end %>
                </tr>
              <% end %> 
            </tbody>
          </table>
        <% else %>
          <p class="text-center">Não foram cadastrados itens para esse lote.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
