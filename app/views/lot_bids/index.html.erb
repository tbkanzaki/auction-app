<div class="container shadow p-2 mb-3 mt-3 bg-body-tertiary rounded div-max-width">
  <h5 class="text-center">Seus lotes contemplados</h5>
</div>

<div class="container div-max-width mb-4">
  <% if @lot_winner.present? %>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Lote</th>
          <th>Lance vencedor</th>
          <th>Mensagem</th>
        </tr>
      </thead>
      <tbody class="table-group-divider">
        <% @lot_winner.each do |item|  %>
          <% if item.user.id == current_user.id %>
            <tr>
              <td><%= link_to item.lot.code, lot_path(item.lot.id,user: item.user.id), class: "link-secondary" %></td>
              <td><%= item.bid %></td>
              <td>Parabéns! Você arrematou o lote. Entraremos em contato!</td>
            </tr>
          <% end %> 
        <% end %>   
      </tbody>
    </table>
  <% else %>
    <p class="text-center">Você não tem lotes contemplados.</p>
  <% end %>
</div>