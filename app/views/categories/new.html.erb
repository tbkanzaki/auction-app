<div class="container shadow p-2 mb-4 bg-body-tertiary rounded" style="max-width: 750px;">
  <h5 class="text-center">Cadastro de Categorias</h5>
</div>

<div class="container p-2 mb-4 bg-body-tertiary rounded" style="max-width: 750px;">
<% if @category.errors.any? %>
  <p class="text-danger text-center">Verifique os erros abaixo</p>
  <dl class="text-center">
    <% @category.errors.full_messages.each do |msg| %>
      <dt><%= msg %></dt>
    <% end %>
  </dl>
<% end %>
  <%= form_with(model: @category) do |form| %>
    <div class="mb-3">
      <%= form.label :name, classclass: 'form-label' %>
      <%= form.text_field :name, class: 'form-control mb-2' %>
    </div>
    <div class="d-flex justify-content-center">
      <%= form.submit 'Salvar', class: 'btn btn-secondary  mt-2' %>
    </div>
  <% end %>
</div>
