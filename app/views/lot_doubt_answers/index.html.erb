<div class="container shadow p-2 mb-4 bg-body-tertiary rounded div-max-width">
  <h5 class="text-center">Perguntas sem resposta</h5>
</div>

<div class="container div-max-width p-2" >
  <% if @lot_doubt_answers.any? %>
    <table class="table table-striped table-hover  mt-4 ">
      <thead>
        <tr class="text-center">
          <th>Lote</th>
          <th><%= LotDoubt.human_attribute_name(:question) %></th>
          <th></th>
        </tr>
      </thead>
      <tbody class="table-group-divider">
        <% @lot_doubt_answers.each do |lot_doubt_answer| %>
          <tr>
            <td><%= lot_doubt_answer.lot.code %></td>
            <td><%= lot_doubt_answer.question %></td>
            <td><%= link_to 'Responder', new_lot_doubt_lot_doubt_answer_path(lot_doubt_answer.id), class: 'btn btn-outline-secondary btn-sm', id: dom_id(lot_doubt_answer) %></td>
            <td><%= button_to 'Bloquear', blocked_lot_doubt_path(lot_doubt_answer.id), class: 'btn btn-outline-secondary btn-sm' , id: lot_doubt_answer.id %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-center">NÃ£o existem perguntas sem resposta no momento.</p>
  <% end %>
</div>
